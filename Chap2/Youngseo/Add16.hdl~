/**
 * Adds two 16-bit values.
 * The most significant carry bit is ignored.
 */

CHIP Add16 {
    IN a[16], b[16];
    OUT out[16];

    PARTS:
   // Put you code here:
    FullAdder(a=a[15], b=b[15], c=0, sum=out[15], carry=na);
    FullAdder(a=a[14], b=b[14], c=na, sum=out[14], carry=nb);
    FullAdder(a=a[13], b=b[13], c=nb, sum=out[13], carry=nc);
    FullAdder(a=a[12], b=b[12], c=nc sum=out[12], carry=nd);
    FullAdder(a=a[11], b=b[11], c=nd, sum=out[11], carry=ne);
    FullAdder(a=a[10], b=b[10], c=ne, sum=out[10], carry=nf);
    FullAdder(a=a[9], b=b[9], c=nf, sum=out[9], carry=ng);
    FullAdder(a=a[8], b=b[8], c=ng, sum=out[8], carry=nh);
    FullAdder(a=a[7], b=b[7], c=nh, sum=out[7], carry=ni);
    FullAdder(a=a[6], b=b[6], c=ni, sum=out[6], carry=nj);
    FullAdder(a=a[5], b=b[5], c=nj, sum=out[5], carry=nk);
    FullAdder(a=a[4], b=b[4], c=nk, sum=out[4], carry=nl);
    FullAdder(a=a[3], b=b[3], c=nl, sum=out[3], carry=nm);
    FullAdder(a=a[2], b=b[2], c=nm, sum=out[2], carry=nn);
    FullAdder(a=a[1], b=b[1], c=nn, sum=out[1], carry=no);
    FullAdder(a=a[0], b=b[0], c=no, sum=out[0], carry=np);

}
